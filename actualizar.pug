extends layout.pug
block titulo   
    title actualizar
block formulario
    form(action='/subir' method='post')
        div.container
            |       Patente: 
            input(type='text' name='patente' id="txt" class="form-control " placeholder="ej: AAA123" value=(patente) readonly)              
            |       Color: 
            input(type='color' name='color' class="form-control form-control-color" value=(color) required)
            br
            |       Dueño: 
            input(type='text' name='dueño' class="form-control" placeholder="ingrese su nombre" value=(nombre) required)            
            |       Marca: #{marcaA} es la marca anterior
            select(name='marcas' id="marca" class="form-select" required)            
            |       Modelo: #{modelo} es la modelo anterior
            select(name='modelos' id="modelo" class="form-select" required)                                    
            input(type='submit' value='Actualizar' class="btn btn-primary" onclick="")
block codigo 
        script.
            let marcas = ["seleccione","Ford","Chevrolet","Ferrari"];
            let modelos = { Ford : ["Focus","Fiesta","Taunus"], Chevrolet : ["Chevy","Corsa"], Ferrari :["laborghini","coupe F1"]};
            const marca = document.getElementById("marca");
            const modelo = document.getElementById("modelo");
            function cargarMar(arr){
                
                for(let x=0 ; x<arr.length;x++){
                let option = document.createElement("option");
                option.text=arr[x];
                option.value=arr[x];
                
                marca.appendChild(option);
                }
        
            } 
            let guardar= () =>{
                let option = confirm("seguro que desea guardar?");
                return option
            }
            window.onload = function() {
               
            cargarMar(marcas);
            };
            function limpiar(){
                modelo.innerHTML="";
            }
            
            marca.addEventListener('change', (event) => {
                limpiar();
                
            let resultado = event.target.value;
            if(resultado != "seleccione"){
            let arr= modelos[`${resultado}`];
            
                for(let x=0 ; x<arr.length;x++){
                let option = document.createElement("option");
                option.text=modelos[`${resultado}`][x];
                option.value=modelos[`${resultado}`][x];
                modelo.appendChild(option);
                }
                }
            });   
                             